<Window x:Class="PTPFileSender.AcceptDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PTPFileSender"
        mc:Ignorable="d"
        Title="AcceptDialog" SizeToContent="WidthAndHeight">
    <Grid Height="200" Width="300">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Button Grid.Row="0" Margin="10" Height="30" Content="Сохранить файл"/>
        <ProgressBar Grid.Row="1" Margin="10" Value="40" Height="30"/>
        <Button Grid.Row="2" Margin="10" Content="Отмена" Height="30"/>
    </Grid>
</Window>

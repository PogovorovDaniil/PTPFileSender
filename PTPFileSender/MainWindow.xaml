<Window x:Class="PTPFileSender.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PTPFileSender"
        mc:Ignorable="d"
        Title="MainWindow" SizeToContent="WidthAndHeight">
    <Grid Height="300" Width="400">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.5*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBox Grid.Row="0" Grid.Column="0" Height="20" Margin="10"/>
        <Button Grid.Row="0" Grid.Column="1" Height="30" Margin="10" Content="Подключиться"/>
        <ProgressBar Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Height="30" Margin="10" Value="40"/>
        <Button Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Height="30" Margin="10" Content="Выбрать файл"/>
        <Button Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Height="30" Margin="10" Content="Отправить"/>
    </Grid>
</Window>
